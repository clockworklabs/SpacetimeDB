<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="PaintApp.Client.MainPage"
             Title="SpacetimeDB Paint">
    
    <Grid ColumnDefinitions="250,*,300" RowDefinitions="60,*,40">
        
        <!-- Top Toolbar -->
        <Grid Grid.Row="0" Grid.ColumnSpan="3" BackgroundColor="{StaticResource BackgroundMedium}" 
              Padding="16,0" ColumnDefinitions="Auto,*,Auto,Auto">
            
            <!-- Logo and Title -->
            <HorizontalStackLayout Grid.Column="0" Spacing="12" VerticalOptions="Center">
                <Label Text="ðŸŽ¨" FontSize="24" VerticalOptions="Center"/>
                <Label Text="SpacetimeDB Paint" FontSize="18" FontAttributes="Bold" 
                       TextColor="{StaticResource AccentCyan}" VerticalOptions="Center"/>
            </HorizontalStackLayout>
            
            <!-- Connection Status -->
            <HorizontalStackLayout Grid.Column="2" Spacing="8" VerticalOptions="Center">
                <Ellipse x:Name="ConnectionIndicator" Fill="#22c55e" 
                         WidthRequest="10" HeightRequest="10" VerticalOptions="Center"/>
                <Label x:Name="ConnectionStatus" Text="Connected" 
                       TextColor="{StaticResource TextSecondary}" FontSize="12" VerticalOptions="Center"/>
            </HorizontalStackLayout>
            
            <!-- User Display Name -->
            <HorizontalStackLayout Grid.Column="3" Spacing="8" VerticalOptions="Center" Margin="20,0,0,0">
                <Entry x:Name="DisplayNameEntry" Placeholder="Your name" WidthRequest="150"
                       BackgroundColor="{StaticResource BackgroundLight}" TextColor="{StaticResource TextPrimary}"
                       Completed="OnDisplayNameCompleted"/>
                <Button Text="Set" Clicked="OnSetDisplayName" Style="{StaticResource SecondaryButton}" Padding="12,8"/>
            </HorizontalStackLayout>
        </Grid>
        
        <!-- Left Sidebar - Canvases & Layers -->
        <Grid Grid.Row="1" Grid.Column="0" BackgroundColor="{StaticResource BackgroundMedium}" 
              RowDefinitions="Auto,*,Auto,*" Padding="12">
            
            <!-- Canvas List Header -->
            <HorizontalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,8">
                <Label Text="ðŸ“ Canvases" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                <Button Text="+" Clicked="OnCreateCanvas" Style="{StaticResource ToolButton}" 
                        WidthRequest="32" HeightRequest="32" FontSize="16"/>
            </HorizontalStackLayout>
            
            <!-- Canvas List -->
            <ScrollView Grid.Row="1">
                <VerticalStackLayout x:Name="CanvasList" Spacing="4"/>
            </ScrollView>
            
            <!-- Layers Header -->
            <HorizontalStackLayout Grid.Row="2" Spacing="8" Margin="0,12,0,8">
                <Label Text="ðŸ“š Layers" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                <Button Text="+" Clicked="OnCreateLayer" Style="{StaticResource ToolButton}" 
                        WidthRequest="32" HeightRequest="32" FontSize="16"/>
            </HorizontalStackLayout>
            
            <!-- Layers List -->
            <ScrollView Grid.Row="3">
                <VerticalStackLayout x:Name="LayersList" Spacing="4"/>
            </ScrollView>
        </Grid>
        
        <!-- Main Canvas Area -->
        <Grid Grid.Row="1" Grid.Column="1" BackgroundColor="{StaticResource BackgroundDark}">
            <!-- Tool Bar (above canvas) -->
            <Grid RowDefinitions="50,*" Padding="8">
                <!-- Drawing Tools -->
                <ScrollView Grid.Row="0" Orientation="Horizontal">
                    <HorizontalStackLayout Spacing="4" Padding="4">
                        <Button x:Name="BtnBrush" Text="âœï¸" Clicked="OnSelectBrush" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnEraser" Text="ðŸ§¹" Clicked="OnSelectEraser" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnLine" Text="ðŸ“" Clicked="OnSelectLine" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnRect" Text="â¬œ" Clicked="OnSelectRect" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnEllipse" Text="â­•" Clicked="OnSelectEllipse" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnText" Text="T" Clicked="OnSelectText" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnFill" Text="ðŸª£" Clicked="OnSelectFill" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnSelect" Text="â—»ï¸" Clicked="OnSelectTool" Style="{StaticResource ToolButton}"/>
                        
                        <BoxView WidthRequest="1" BackgroundColor="{StaticResource BorderColor}" Margin="8,4"/>
                        
                        <!-- Color Picker -->
                        <Button x:Name="BtnStrokeColor" Text="ðŸŽ¨" BackgroundColor="#ffffff" 
                                Clicked="OnPickStrokeColor" Style="{StaticResource ToolButton}"/>
                        <Button x:Name="BtnFillColor" Text="ðŸ–Œï¸" BackgroundColor="Transparent" 
                                BorderColor="{StaticResource BorderColor}" BorderWidth="2"
                                Clicked="OnPickFillColor" Style="{StaticResource ToolButton}"/>
                        
                        <BoxView WidthRequest="1" BackgroundColor="{StaticResource BorderColor}" Margin="8,4"/>
                        
                        <!-- Brush Size -->
                        <Label Text="Size:" TextColor="{StaticResource TextSecondary}" VerticalOptions="Center" Margin="4,0"/>
                        <Slider x:Name="BrushSizeSlider" Minimum="1" Maximum="50" Value="5" WidthRequest="100"
                                ValueChanged="OnBrushSizeChanged" VerticalOptions="Center"/>
                        <Label x:Name="BrushSizeLabel" Text="5" WidthRequest="30" 
                               TextColor="{StaticResource TextPrimary}" VerticalOptions="Center"/>
                        
                        <!-- Opacity -->
                        <Label Text="Opacity:" TextColor="{StaticResource TextSecondary}" VerticalOptions="Center" Margin="8,0,4,0"/>
                        <Slider x:Name="OpacitySlider" Minimum="0" Maximum="1" Value="1" WidthRequest="100"
                                ValueChanged="OnOpacityChanged" VerticalOptions="Center"/>
                        
                        <BoxView WidthRequest="1" BackgroundColor="{StaticResource BorderColor}" Margin="8,4"/>
                        
                        <!-- Undo/Redo -->
                        <Button Text="â†©ï¸" Clicked="OnUndo" Style="{StaticResource ToolButton}"/>
                        <Button Text="â†ªï¸" Clicked="OnRedo" Style="{StaticResource ToolButton}"/>
                        
                        <BoxView WidthRequest="1" BackgroundColor="{StaticResource BorderColor}" Margin="8,4"/>
                        
                        <!-- Zoom -->
                        <Button Text="âž–" Clicked="OnZoomOut" Style="{StaticResource ToolButton}" WidthRequest="32"/>
                        <Label x:Name="ZoomLabel" Text="100%" TextColor="{StaticResource TextPrimary}" 
                               WidthRequest="50" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
                        <Button Text="âž•" Clicked="OnZoomIn" Style="{StaticResource ToolButton}" WidthRequest="32"/>
                        <Button Text="ðŸ”²" Clicked="OnFitToScreen" Style="{StaticResource ToolButton}"/>
                    </HorizontalStackLayout>
                </ScrollView>
                
                <!-- Canvas Drawing Surface -->
                <skia:SKCanvasView x:Name="CanvasView" Grid.Row="1" 
                                   PaintSurface="OnCanvasPaint"
                                   EnableTouchEvents="True"
                                   Touch="OnCanvasTouch"/>
            </Grid>
            
            <!-- Empty State Overlay -->
            <Grid x:Name="EmptyStateOverlay" BackgroundColor="{StaticResource BackgroundDark}" IsVisible="True">
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="16">
                    <Label Text="ðŸŽ¨" FontSize="64" HorizontalOptions="Center"/>
                    <Label Text="Welcome to SpacetimeDB Paint" FontSize="24" FontAttributes="Bold"
                           TextColor="{StaticResource AccentCyan}" HorizontalOptions="Center"/>
                    <Label Text="Create or join a canvas to start collaborating" 
                           TextColor="{StaticResource TextSecondary}" HorizontalOptions="Center"/>
                    <Button Text="Create New Canvas" Clicked="OnCreateCanvas" 
                            Style="{StaticResource PrimaryButton}" HorizontalOptions="Center" Margin="0,16,0,0"/>
                </VerticalStackLayout>
            </Grid>
        </Grid>
        
        <!-- Right Sidebar - Properties & Comments -->
        <Grid Grid.Row="1" Grid.Column="2" BackgroundColor="{StaticResource BackgroundMedium}" 
              RowDefinitions="Auto,Auto,*,Auto,*" Padding="12">
            
            <!-- Canvas Info -->
            <VerticalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,12">
                <Label Text="ðŸ“‹ Canvas Info" FontSize="14" FontAttributes="Bold"/>
                <Label x:Name="CanvasNameLabel" Text="No canvas selected" 
                       TextColor="{StaticResource TextSecondary}" FontSize="12"/>
            </VerticalStackLayout>
            
            <!-- Collaborators -->
            <VerticalStackLayout Grid.Row="1" Spacing="8" Margin="0,0,0,12">
                <Label Text="ðŸ‘¥ Collaborators" FontSize="14" FontAttributes="Bold"/>
                <VerticalStackLayout x:Name="CollaboratorsList" Spacing="4"/>
            </VerticalStackLayout>
            
            <!-- Comments Section -->
            <Grid Grid.Row="2" RowDefinitions="Auto,*,Auto">
                <HorizontalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,8">
                    <Label Text="ðŸ’¬ Comments" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                    <Button Text="+" Clicked="OnAddComment" Style="{StaticResource ToolButton}" 
                            WidthRequest="32" HeightRequest="32" FontSize="16"/>
                </HorizontalStackLayout>
                <ScrollView Grid.Row="1">
                    <VerticalStackLayout x:Name="CommentsList" Spacing="8"/>
                </ScrollView>
            </Grid>
            
            <!-- Version History Section -->
            <Grid Grid.Row="3" RowDefinitions="Auto,*,Auto" Margin="0,12,0,0">
                <HorizontalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,8">
                    <Label Text="ðŸ“œ Versions" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                    <Button Text="ðŸ’¾" Clicked="OnSaveVersion" Style="{StaticResource ToolButton}" 
                            WidthRequest="32" HeightRequest="32" FontSize="16"/>
                </HorizontalStackLayout>
                <ScrollView Grid.Row="1" HeightRequest="150">
                    <VerticalStackLayout x:Name="VersionsList" Spacing="4"/>
                </ScrollView>
            </Grid>
            
            <!-- Templates Section -->
            <Grid Grid.Row="4" RowDefinitions="Auto,*" Margin="0,12,0,0">
                <HorizontalStackLayout Grid.Row="0" Spacing="8" Margin="0,0,0,8">
                    <Label Text="ðŸ–¼ï¸ Templates" FontSize="14" FontAttributes="Bold" VerticalOptions="Center"/>
                    <Button Text="ðŸ“¤" Clicked="OnSaveAsTemplate" Style="{StaticResource ToolButton}" 
                            WidthRequest="32" HeightRequest="32" FontSize="16"/>
                </HorizontalStackLayout>
                <ScrollView Grid.Row="1" HeightRequest="120">
                    <VerticalStackLayout x:Name="TemplatesList" Spacing="4"/>
                </ScrollView>
            </Grid>
        </Grid>
        
        <!-- Bottom Status Bar -->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" BackgroundColor="{StaticResource BackgroundMedium}" 
              Padding="16,0" ColumnDefinitions="*,Auto,Auto,Auto,Auto">
            <Label x:Name="StatusLabel" Text="Ready" TextColor="{StaticResource TextSecondary}" 
                   FontSize="12" VerticalOptions="Center"/>
            <Label x:Name="CursorPosLabel" Grid.Column="1" Text="X: 0, Y: 0" 
                   TextColor="{StaticResource TextMuted}" FontSize="12" VerticalOptions="Center" Margin="16,0"/>
            <Label x:Name="ToolLabel" Grid.Column="2" Text="Tool: Brush" 
                   TextColor="{StaticResource AccentCyan}" FontSize="12" VerticalOptions="Center" Margin="16,0"/>
            <Label x:Name="LayerLabel" Grid.Column="3" Text="Layer: None" 
                   TextColor="{StaticResource TextSecondary}" FontSize="12" VerticalOptions="Center" Margin="16,0"/>
            <Label x:Name="RoleLabel" Grid.Column="4" Text="Role: None" 
                   TextColor="{StaticResource PrimaryPurple}" FontSize="12" VerticalOptions="Center"/>
        </Grid>
        
        <!-- Loading Overlay -->
        <Grid x:Name="LoadingOverlay" Grid.RowSpan="3" Grid.ColumnSpan="3" 
              BackgroundColor="#cc0a0a0f" IsVisible="True">
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="16">
                <ActivityIndicator IsRunning="True" Color="{StaticResource AccentCyan}" HeightRequest="48" WidthRequest="48"/>
                <Label x:Name="LoadingLabel" Text="Connecting to SpacetimeDB..." 
                       TextColor="{StaticResource TextPrimary}" FontSize="16" HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Grid>
        
    </Grid>
</ContentPage>
